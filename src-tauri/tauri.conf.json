{
  "$schema": "https://raw.githubusercontent.com/nicegui/tauri/main/crates/tauri-cli/config.schema.json",
  "productName": "StageView",
  "version": "1.1.0",
  "identifier": "com.stageview.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "StageView",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' http://localhost:* http://*:* data: blob:; media-src 'self' http://localhost:* http://*:* blob:; connect-src 'self' http://localhost:* ipc: http://*:* https://github.com https://api.github.com https://objects.githubusercontent.com; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM3QjJGMjEyNjA5NTBDMzQKUldRMERKVmdFdkt5eCtHN1k3U0dUQjJqeXpubzA0endPMDZLR0xWTUhvVVRxOTZleEZ1U0hDM0oK",
      "endpoints": [
        "https://github.com/keithhegstad/StageView/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "externalBin": ["binaries/ffmpeg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    },
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"],
        "section": "video",
        "priority": "optional"
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  }
}
